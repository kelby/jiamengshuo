<p id="notice"><%= notice %></p>

<% @posts.each_slice(3) do |posts| %>
  <article class="row circle-list skill-list">
    <% posts.each do |post| %>
      <div class="medium-4 columns">
        <div class="guide-cover js-guide-cover js-geopattern" style="background-image: <%= pattern post.title %>;">
          <%= link_to post do %>
            <div class="icon-container">
              <span class="fi-page large"></span>
            </div>
            <h3 class="guide-cover-title js-guide-cover-title"><%= post.title %></h3>
          <% end %>
        </div>

        <p class="skill-level subheader"><%= image_tag post.user.avatar_url(:tiny), class: 'super_tiny_avatar' %>&nbsp;<%= post.user.username %></p>
        <p>The straight CSS version is perfect if you want to just start writing code, rapid prototype, or building a simple, static site. We'll give you all the pieces you need, no setup required.</p>
        <p><i class="fi-clock"></i>&nbsp;<%= post.updated_at %></p>
      </div>

      <hr class="dashed hide-for-medium-up">
    <% end %>
  </article>
<% end %>
