<h1 class='panel-white' style="background-image: <%= pattern @post.title %>;">
  <div class="icon-container panel-white show_title">
    <% if @post.icon.present? %>
      <span class="fi-<%= @post.icon %> large"></span>
    <% else %>
      <span class="fi-page-multiple large mega-octicon"></span>
    <% end %>
  </div>
  <%= @post.title %>

</h1>

<div class="row">
  <div class="large-9 columns" role="content">
    <p>
      <%= raw(markdown_for @post.description) %>
    </p>

    <% @sections.each_with_index do |section, index| %>
        <% if section.heading.present? %>
          <h2 class="panel"><%= link_to section.heading, "##{dom_id section}" %><%=  %></h2>
        <% end %>

        <p><%= raw(markdown_for section.description) %></p>
      <!-- </div> -->
    <% end %>
  </div>

  <aside class="large-3 columns hide-for-small" id="when_top_fixed_me">
    <h5>Toc</h5>

    <div>
      <ul class="sub-nav">
        <% @sections.each_with_index do |section, index| %>
          <li>
            <%= link_to section.heading, "##{dom_id section}" %>
          </li>
        <% end %>
      </ul>
    </div>

    <% if user_signed_in? %>
      <% apply = Apply.where(mentor_id: @post.user.id, user_id: current_user.id).last %>
    <% else %>
      <% apply = nil %>
    <% end %>

    <% if user_signed_in? && (current_user.teachers_ids.include? @post.user.id) %>
      <a href="javascript:void(0);" class="fancy radius button tiny">我的导师</a>
    <% elsif apply && apply.pending? %>
      <a href="javascript:void(0);" class="fancy radius button tiny">已经拜师</a>
    <% elsif apply && apply.refused? %>
      <a href="javascript:void(0);" class="fancy radius button tiny">已被拒绝</a>
    <% else %>
      <a href="javascript:void(0);" data-reveal-id="create_apply" class="fancy radius button tiny" id="new_apply">我要拜师</a>

      <div id="create_apply" class="reveal-modal" data-reveal>
        <%= render 'applies/form', user: @post.user %>
        <a class="close-reveal-modal">&#215;</a>
      </div>
    <% end %>


  </aside>
</div>

<% if can? :update, @post %>
  <%= link_to 'Edit', edit_post_path(@post) %>
<% end %>