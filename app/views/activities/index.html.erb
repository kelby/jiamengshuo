<div class="raw">
  <div class="margin-content large-10 small-12 columns large-offset-1">
    <ul class="tabs" data-tab role="tablist">
      <li class="tab-title active" role="presentational" >
        <a href="#pindan" role="tab" tabindex="0" aria-selected="true" controls="pindan">消息</a>
        </li>
      <li class="tab-title" role="presentational" >
        <a href="#direct_messages" role="tab" tabindex="0"aria-selected="false" controls="direct_messages">私信</a>
      </li>
      <li class="tab-title" role="presentational">
        <a href="#followers" role="tab" tabindex="0" aria-selected="false" controls="followers">关注</a>
      </li>
    </ul>

    <div class="tabs-content">
      <!-- 拼单 -->
      <section role="tabpanel" aria-hidden="false" class="content active pindan-message" id="pindan">
        <div class="pindan-message-detail margin-content">
          <img class="user-tiny-avatar-size float-left" src="http://shixian.com/upload/user/avatar/13222/62ed1a30ec86ccbc203948df098cd84e">
          <div class="clearfix pindan-message-detail-info">
            <p>free</p>
            <p>恢复了xxxxx  <strong><a href="#">查看</a></strong></p>
            <p class="font-color-gray">2小时</p>
          </div>
        </div>

        <div class="pindan-message-detail margin-content">
          <img class="user-tiny-avatar-size float-left" src="http://shixian.com/upload/user/avatar/13222/62ed1a30ec86ccbc203948df098cd84e">
          <div class="clearfix pindan-message-detail-info">
            <p>free</p>
            <p>恢复了xxxxx   <strong><a href="#">查看</a></strong></p>
            <p class="font-color-gray">2小时</p>
          </div>
        </div>
      </section>

      <!-- 私信 -->
      <section role="tabpanel" aria-hidden="true" class="content pindan-message" id="direct_messages">
        私信&nbsp;(<%= DirectMessage.where(to_user_id: current_user.id).not_read.count %>&nbsp;未读)：

        <% @direct_messages.each_slice(5) do |dms| %>
            <% dms.each do |dm| %>
              <div class="pindan-message-detail margin-content">
                <img class="user-tiny-avatar-size float-left" src="http://shixian.com/upload/user/avatar/13222/62ed1a30ec86ccbc203948df098cd84e">
                <div class="clearfix pindan-message-detail-info">
                  <p><%= dm.from_user.username %></p>
                  <p>私信了你： <%= dm.content %>  <strong><a href="#">查看</a></strong></p>
                  <p class="font-color-gray"><%= time_ago_in_words dm.created_at %></p>
                </div>
              </div>
            <% end %>
        <% end %>

        <%= paginate @direct_messages, :param_name => 'dm_page' %>
      </section>

      <!-- 关注 -->
      <section role="tabpanel" aria-hidden="true" class="content" id="followers">
        <% current_user.followers.each do |user| %>
          <img class="user-tiny-avatar-size float-left" src="http://shixian.com/upload/user/avatar/13222/62ed1a30ec86ccbc203948df098cd84e">
          <%= user.username %> 关注了你。
          <br/>
        <% end %>
      </section>
    </div>
  </div>

  <!-- 公共消息： -->

  <%# @activities.each_slice(5) do |activities| %>
    <!-- <div> -->
      <%# activities.each do |activity| %>
        <!-- <div class="activity"> -->
          <%#= link_to activity.owner.username, activity.owner if activity.owner %>
          <%#= render_activity activity %>
        <!-- </div> -->
      <%# end %>
      <!-- <hr class="dashed"></hr> -->
    <!-- </div> -->
  <%# end %>

  <%#= paginate @activities, :param_name => 'pub_page' %>
</div>