<% if user_signed_in? %>
  <script type="text/javascript">
    var subject = "/direct_message/<%= current_user.id %>"
    var client = new Faye.Client('http://localhost:9292/faye');

    client.subscribe(subject, function(data){
      $("i.fa.fa-bell").addClass("red");
    });
  </script>
<% end %>
