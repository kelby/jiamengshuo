<% if notice || alert %>
  <div class="row">    
    <% if notice %>
      <div data-alert class="alert-box radius">
        <%= notice %>
        <a href="#" class="close">&times;</a>
      </div>
    <% end %>

    <% if alert %>
      <div data-alert class="alert-box radius">
        <%= alert %>
        <a href="#" class="close">&times;</a>
      </div>
    <% end %>
  </div>
<% end %>
