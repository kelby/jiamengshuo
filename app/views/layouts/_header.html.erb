<div id="myModal" class="reveal-modal remove-whitespace" data-reveal>
<div class="row">
    <!-- 登录 -->
    <div class="large-6 columns auth-plain">
      <div class="signup-panel left-solid">
        <p class="welcome">已有账号</p>
        <%= form_for(:user, url: user_session_path) do |f| %>
          <div class="row collapse">
            <div class="small-2  columns">
              <%= f.label :login do %>
                <span class="prefix"><i class="fi-torso large"></i></span>
              <% end %>
            </div>
            <div class="small-10  columns">
              <%= f.text_field :login, required: true, autofocus: true, placeholder: t("devise.email_or_username") %>
            </div>
          </div>
          <div class="row collapse">
            <div class="small-2 columns ">
              <%= f.label :password do %>
                <span class="prefix"><i class="fi-lock large"></i></span>
              <% end %>
            </div>
            <div class="small-10 columns ">
              <%= f.password_field :password, required: true, autocomplete: "off", placeholder: t("devise.password") %>
            </div>
          </div>
          <%= f.submit "登录", class: "button", style: "float: right;" %>
        <% end %>
        <div style="position: relative; top: 15px; width: 75%;" class="a-state-hover-underline">
          <%= link_to 'QQ登录', user_omniauth_authorize_path(:qq_connect), style: "color: black; margin-right: 30px;" %>
          <%= link_to '微博登录', user_omniauth_authorize_path(:weibo), style: "color: black; margin-right: 30px;" %>
          <a href="#" style="color: gray;">忘记密码?</a>
        </div>
      </div>
    </div>

    <!-- 注册 -->
    <div class="large-6 columns auth-plain">
      <div class="signup-panel newusers">
        <p class="welcome"> 还没有账号?</p>
        <p>注册账户以后就可以参与拼单或者发布拼单啦!</p><br>
        <a href="#" class="button " data-reveal-id="signup">立即注册</a></br>
      </div>
    </div>

   </div>
  <a class="close-reveal-modal">&#215;</a>
</div>

