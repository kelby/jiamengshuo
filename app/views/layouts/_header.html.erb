<nav class="top-bar" data-topbar role="navigation">
  <ul class="title-area">
    <li class="name">
      <h1><%= link_to "Found Mentor", root_path %></h1>
    </li>
     <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
    <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
  </ul>

  <section class="top-bar-section">
    <!-- Left Nav Section -->
    <ul class="left">
      <li><%= link_to "首页", root_path %></li>
      <li><%= link_to "寻找导师", users_path %></li>
      <li><%= link_to '发现话题', topics_path %></li>
      <li><%= link_to '我要提问', questions_path %></li>

      <li class="has-form">
        <%= form_tag search_topics_path, method: :get, class: "row collapse" do |f| %>
          <div class="large-8 small-9 columns">
            <%= text_field_tag 'q', params[:q], placeholder: 'Find Stuff' %>
          </div>

          <div class="large-4 small-3 columns">
            <%= submit_tag 'Search', class: "alert button expand" %>
          </div>
        <% end %>
      </li>
    </ul>

    <!-- Right Nav Section -->
    <ul class="right">
      <li>
        <%= link_to "javascript:void(0)" do %>
          <%= image_tag 'u24.png', size: "42x42" %>
        <% end %>
      </li>

      <% if user_signed_in? %>
        <li class="active"><a href="#"><%= current_user.email %></a></li>
        <li class="has-dropdown">
          <%= link_to current_user.username, user_path(current_user) %>
          <ul class="dropdown">
            <li><%= link_to '个人主页', user_path(current_user) %></li>
            <li><a href="#">修改头像</a></li>
            <li><%= link_to '设置', edit_user_registration_path %></li>
            <li class="divider"></li>
            <li><%= link_to '注销', destroy_user_session_path, method: :delete %></li>
          </ul>
        </li>
      <% else %>
        <li class="has-form">
          <%= link_to '注册', new_user_registration_path, class: "small button" %>
        </li>
        <li class="divider"></li>
        <li><%= link_to '登录', new_user_session_path %></li>
      <% end %>
    </ul>
  </section>
</nav>