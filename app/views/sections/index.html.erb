<p id="notice"><%= notice %></p>

<h1>Listing Sections</h1>

<table>
  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= link_to section.heading, section %></td>
        <td><%= section.body %></td>
        <td><%= section.position %></td>
        <td><%= section.post_id %></td>

        <% if can? :update, section %>
          <td><%= link_to 'Edit', edit_section_path(section) %></td>
        <% end %>

        <% if can? :delete, section %>
          <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
