<%= form_for(@section) do |f| %>
  <% if @section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
      <% @section.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :heading, "课程标题" %><br>
    <%= f.text_field :heading %>
  </div>
  <div class="field">
    <%= f.label :body, "课程内容" %><br>
    <%= f.text_area :body, rows: 25 %>
  </div>

  <section id="more_opt">
    <%= link_to "更多选项 ...", "javascript:void(0);" %>
  </section>
  <hr>

  <section id="more_content">
    <div class="field">
      <%= f.label :post_id, '关联课程大纲' %><br>
      <%= f.number_field :post_id %>
    </div>
    <div class="field">
      <%= f.label :position, '对应课程大纲第几章节' %><br>
      <%= f.number_field :position %>
    </div>
  </section>

  <div class="actions">
    <%= f.submit "提交", class: "blue tiny button radius" %>
  </div>
<% end %>
