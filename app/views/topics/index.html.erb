<p id="notice"><%= notice %></p>

<h1>Listing Topics</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td>
          <%= link_to topic do %>
            <%= topic.title %>
          <% end %>
        </td>
        <td><%= topic.body %></td>

        <% if can? :update, topic %>
          <td><%= link_to 'Edit', edit_topic_path(topic) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @topics %>

<br>

<%= link_to 'New Topic', new_topic_path %>
