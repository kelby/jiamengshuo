<%= form_for @topic do |f| %>
  <% if @topic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@topic.errors.count, "error") %> prohibited this topic from being saved:</h2>

      <ul>
      <% @topic.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title, t("topics.title") %><br>
    <%= f.text_field :title, required: true %>
  </div>
  <div class="field">
    <%= f.label :body, t("topics.body") %><br>
    <%= f.text_area :body, rows: 25, required: true %>
  </div>
  <div class="field">
    <%= f.label :tag_list, "标签：(多个标签之间用逗号分隔)" %><br>
    <%= f.text_field :tag_list, required: true %>
  </div>
  <div class="actions">
    <%= f.submit "提交", class: "blue tiny button radius" %>
  </div>
<% end %>
