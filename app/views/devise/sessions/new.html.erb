<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div><%= f.label :login %><br />
  <%= f.text_field :login, required: true, autofocus: true, placeholder: 'Email or Username' %></div>

  <div><%= f.label :password %><br />
    <%= f.password_field :password, required: true, autocomplete: "off" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit  "提交", class: "blue tiny button radius" %></div>
<% end %>

<%= render "devise/shared/links" %>
