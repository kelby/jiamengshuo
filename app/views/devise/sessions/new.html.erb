<section class="small-9 large-6 columns large-centered small-centered">
  <h2><%= t("devise.login") %></h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row collapse">
      <div class="small-2 columns">
        <%= f.label :login do %>
          <span class="prefix"><i class="fi-torso large"></i></span>
        <% end %>
      </div>
      <div class="small-10 columns">
        <%= f.text_field :login, required: true, autofocus: true, placeholder: t("devise.email_or_username") %>
      </div>
    </div>

    <div class="row collapse">
      <div class="small-2 columns">
        <%= f.label :password do %>
          <span class="prefix"><i class="fi-lock large"></i></span>
        <% end %>
      </div>
      <div class="small-10 columns">
        <%= f.password_field :password, required: true, autocomplete: "off", placeholder: t("devise.password") %>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div><%= f.check_box :remember_me %> <%= f.label :remember_me, "记住我？" %></div>
    <% end -%>

    <div><%= f.submit  "提交", class: "blue tiny button radius" %></div>
  <% end %>

  <%= render "devise/shared/links" %>
</section>
