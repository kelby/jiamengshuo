<% unless user_signed_in? %>
  <!-- 感谢百度经验！ -->
  <!-- http://jingyan.baidu.com/user/income/school -->
  <section class="body-wrapper">
    <section class="body">
      <section class="top-img-bar">
        <div class="top-img-con">
          <div class="big-title"></div>

          <h3 class="top-desc text-center">干活一定要找个好师傅，跟他学习，对你很有帮助，一定要找一个师傅。</h3>

          <div class="des-step">
            <div class="step-blk step-1"></div>
            <div class="step-blk step-2"></div>
            <div class="step-blk step-3"></div>
            <div class="step-blk step-4"></div>
          </div>

          <div>
            <%= form_for :user, url: user_session_path do |f| %>
              <div class="row columns large-8 collapse" id="signin-form">
                <div class="small-1 columns" id="label-login">
                  <%= f.label :login do %>
                    <span class="prefix login"><i class="fi-torso large"></i></span>
                  <% end %>
                </div>
                <div class="small-3 columns">
                  <%= f.text_field :login, required: true, autofocus: true, placeholder: t("devise.email_or_username") %>
                </div>

                <div class="small-1 columns" id="label-password">
                  <%= f.label :password do %>
                    <span class="prefix password"><i class="fi-lock large"></i></span>
                  <% end %>
                </div>
                <div class="small-3 columns end">
                  <%= f.password_field :password, required: true, autocomplete: "off", placeholder: t("devise.password") %>
                </div>
                
                <div class="right">
                <%= f.submit  "登录", class: "success tiny button radius" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </section>

      <% first_user = @four_users.first %>
      <% second_user = @four_users.second %>
      <% third_user = @four_users.third %>
      <% fourth_user = @four_users.fourth %>
      <% user_ids = User.ids %>

