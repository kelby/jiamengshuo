                <p><span>成功指导学员：</span>154</p></div>
              <div class="trainee-portrait trainee-portrait-31">
                <%= render "users/trainee_portrait", user: User.find(user_ids.sample) %>
              </div>
              <div class="trainee-portrait trainee-portrait-32">
                <%= render "users/trainee_portrait", user: User.find(user_ids.sample) %>
