            </div>
          </div>

          <p class="tutor-more">
            <%#= link_to users_path, target: "_blank" do %>
              <!-- 查看完整导师名单&nbsp;<span>&gt;&gt;</span> -->
            <%# end %>
          </p>
        </div>
      </section>

      <section class="fot-con-par clearfix">
        <div class="fot-con">
          <h3>本周活跃用户排行（<%= Date.today.beginning_of_week.strftime("%-d 日") %> 至 <%= Date.today.end_of_week.strftime("%-d 日") %>）</h3>

          <div class="doing-wrap columns large-12">
            <div class="joing columns large-4">
              <div class="s-title"><h4>最新帖子</h4></div>
              <div class="joing-list-wrap">
                <% joing_list = Topic.limit(5).order(id: :desc) %>
                <ul id="joing-list" class="joing-list" style="top: 0px; left: 0px;">
                  <% joing_list.each do |topic| %>
                    <li>
                      <!-- <span class="join-uname"> -->
                      <%= link_to topic do %>
                      <%= truncate topic.title, length: 18 %>
                      <% end %>
                      <!-- </span> -->
                        <%#= link_to topic.user do %>
                          <%#= image_tag topic.user.avatar_url(:mini), class: "super_tiny" %>
                        <%# end %>
                    </li>
                  <% end %>
                </ul>
              </div>
            </div>

            <div class="curcha columns large-4">
              <div class="s-title"><h4>功课排名</h4></div>
              <% curcha_list = User.order("posts_count desc").limit(5) %>
              <div class="curcha-list">
                <!-- <p class="tit">原创经验</p> -->
                <p class="tit"></p>
                <table>
                  <tbody>
                    <tr>
