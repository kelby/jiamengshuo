            </div>

            <div class="tutor columns large-6 small-12 tutor-4 right">
              <%= render 'users/tutor_portrait', user: fourth_user %>

              <div class="robe-arrow robe-arrow-l"></div>
              <div class="robe-arrow robe-arrow-r"></div>
