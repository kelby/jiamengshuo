<div class="row">
  <div class="margin-content">
    <%= link_to @topic.title, @topic %> 共有 <%= @topic.snippets.count %> 个跟单, <%= @topic.snippets.sum(:quantity) %> 件商品。
    <!-- <hr class="dashed"></hr> -->
    
    <div class="large-12 columns margin-content snippet-list">
      <% @snippets.each_slice(3) do |snippets| %>
        <% snippets.each do |snippet| %>
          <div class="large-4 small-4 columns end large-offset-1">
            <div class="approve-status">
              已同意
            </div>
            <div class="snippet-content">
              <div class="field">
                商品名称:
                <span><%= snippet.name %></span>
              </div>
              <div class="field">
                规格:
                <span><%= snippet.spec %></span>
              </div>
              <div class="field">
                颜色:
                <span><%= snippet.color %></span>
              </div>
              <div class="field">
                单价（元）:
                <span><%= snippet.per_price %></span>
              </div>
              <div class="field">
                数量:
                <span><%= snippet.quantity %></span>
              </div>
              <div class="field">
                收货地址:
                <span><%= snippet.address %></span>
              </div>

              <div class="field">
                备注说明:
                <span><%= snippet.body %></span>
              </div>
              <div class="field">
                参考网站链接:
                <span><%= snippet.website %></span>
              </div>

            </div>
          </div>
        <% end %>
        <!-- <hr class="dashed"></hr> -->
      <% end %>
    </div>
  </div>

  <%= paginate @snippets %>
</div>

